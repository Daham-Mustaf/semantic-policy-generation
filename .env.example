# ============================================
# ODRL Multi-Agent System Configuration
# ============================================

# ============================================
# PRIMARY MODEL CONFIGURATION
# ============================================

# Azure OpenAI (Recommended for Paper Reproduction)
AZURE_OPENAI_API_KEY=your_azure_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-10-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-2024-11-20

# OpenAI-Compatible Endpoint (For Open-Weight Models)
LLM_BASE_URL=http://dgx.fit.fraunhofer.de/v1
LLM_API_KEY=dummy
LLM_TIMEOUT=120

# Default Model Selection
LLM_MODEL=gpt-4o  # Options: gpt-4o, deepseek-r1:70b, gpt-oss:120b, llama3.3:70b

# ============================================
# MODEL OPTIONS (Tested in Paper)
# ============================================

# Paper Evaluation Models
LLM_MODEL_GPT4O=gpt-4o-2024-11-20         # 97.0% conflict detection
LLM_MODEL_GPT_OSS=gpt-oss:120b            # 82.1% conflict detection
LLM_MODEL_LLAMA33=llama3.3:70b            # 83.6% conflict detection
LLM_MODEL_DEEPSEEK_R1=deepseek-r1:70b     # 79.1% conflict detection

# Additional Available Models (Fraunhofer Server)
LLM_MODEL_DEEPSEEK_V3=deepseek-v3:671b    # Ultra-large (not evaluated)
LLM_MODEL_LLAMA31=llama3.1:70b            # Alternative baseline
LLM_MODEL_QWEN3_CODER=qwen3-coder:30b     # Specialized for coding

# ============================================
# AGENT TEMPERATURE SETTINGS
# ============================================

# Reasoning Agent (Conflict Detection)
REASONER_TEMPERATURE=0.0  # Deterministic for consistent conflict detection

# Generator Agent (ODRL Creation)
GENERATOR_TEMPERATURE=0.0  # Deterministic for vocabulary grounding

# Validator Agent (SHACL Regeneration)
VALIDATOR_TEMPERATURE=0.0  # Deterministic for targeted fixes

# ============================================
# VALIDATION SETTINGS
# ============================================

# Maximum regeneration attempts per policy
MAX_REGENERATION_ATTEMPTS=3

# SHACL validation timeout (seconds)
SHACL_TIMEOUT=30

# ============================================
# LOGGING
# ============================================

LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
LOG_FILE=logs/odrl_pipeline.log

# ============================================
# EVALUATION SETTINGS
# ============================================

# Dataset paths
CONFLICTING_POLICIES_DIR=data/conflicting_policies
VALID_POLICIES_DIR=data/valid_policies

# Results output directory
RESULTS_DIR=evaluation/results

# ============================================
# NOTES FOR REVIEWERS
# ============================================

# 1. For reproducing paper results (GPT-4o):
#    - Use AZURE_OPENAI_* configuration
#    - Set LLM_MODEL=gpt-4o
#    - Keep all temperatures at 0.0

# 2. For testing open-weight models:
#    - Use LLM_BASE_URL configuration
#    - Set LLM_MODEL to desired model (see options above)
#    - Requires access to Fraunhofer server or compatible endpoint

# 3. All agents use temperature=0.0 for deterministic outputs
#    (as reported in paper Section 5.1)

# 4. Default max regeneration attempts = 3
#    (as reported in paper Section 4.3)